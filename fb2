<body>
    <header>
        <h1>你在球场上最适合的位置</h1>
    </header>

    <div class="container">
        <h2>输入你的信息，看看你在球场上的最佳位置！</h2>
        <input type="text" id="name" placeholder="你的名字">
        <input type="number" id="height" placeholder="身高（厘米）">
        <input type="number" id="weight" placeholder="体重（公斤）">
        <button onclick="getPosition()">查看结果</button>
        <div class="result" id="result"></div>
    </div>

    <footer>
        <p>&copy; 2025 足球位置测试</p>
    </footer>

    <script>
        function getPosition() {
            const name = document.getElementById('name').value;
            const height = parseFloat(document.getElementById('height').value);
            const weight = parseFloat(document.getElementById('weight').value);
            const resultDiv = document.getElementById('result');

            // 判断逻辑
            if (!name || isNaN(height) || isNaN(weight)) {
                resultDiv.textContent = "请输入完整的信息！";
                resultDiv.style.color = "red";
                return;
            }

            // 假设标准：身高160cm以上，体重50kg以上
            if (height < 160 || weight < 50) {
                resultDiv.textContent = `"${name}"，李思源你不适合踢球，适合在电视前看球！`;
                resultDiv.style.color = "#FF5733";
            } else {
                resultDiv.textContent = `"${name}"，李思源你不适合踢球，适合在电视前看球！`;
                resultDiv.style.color = "#4CAF50";
            }
        }
    </script>
